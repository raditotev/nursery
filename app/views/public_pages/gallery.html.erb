<% provide(:title, "Gallery") %>

<div class="container" id="gallery-page">
  <div class="row">
      <% @albums.each do |album| %>
        <div class="col-sm-6 col-md-4">
          <div class="thumbnail">
          <% if album.photos.any? %>
            <% photo = album.photos.find(album.cover_photo_id) %>
            <%= link_to parents_album_path(album) do %>
              <%= image_tag(photo.image.url(:medium), alt: "#{photo.image_file_name}", class: "img-responsive") %>
            <% end %>
            <% else %>
                <p class="missing-photos">
                  <strong>
                    Coming soon <br><br>
                    <%= fa_icon("spinner spin 2x") %>
                  </strong>
                </p>
            <% end %>
            <div class="caption">
              <h3 class="text-center"><%= album.name %></h3>
            </div>
          </div>
        </div>
      <% end %>
  </div>
</div>

