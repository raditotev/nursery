<% provide(:title, "Jobs") %>

<div class="container vertical-center" id="careers-page">
<% if @jobs.any? %>
  <div class="row page-banner vertical-center">
    <h1>We <span class="text-red">HIRE</span></h1>
  </div>
  <% @jobs.each do |job| %>
    <div class="row">
      <h3 class="text-purple"><%= job.title %></h3>
      <p><%= description(job.description) %></p>
      <p><%= link_to "Apply", contact_path(subject: "Application for: #{job.title}"),
                                              class: "btn btn-default",
                                              data: {confirm: "Please fill out the form on the next screen."} %>

      </p>
      <div class="fadeout"></div>
    </div>
  <% end %>
<% else %>
  <h1 class="text-center" id="no-vacanices">We don't have any vacancies at the moment.</h1>
<% end %>
</div>

