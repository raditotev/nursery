<div id="index-page">
  <div class="row">
    <div class="col-xs-6 col-xs-offset-3 text-center" id="admin-controls">
      <h1>
        <%= link_to fa_icon("plus 2x", id: "plus"),
                            eval("new_#{params[:controller].chomp('s').underscore}_path") %>
      </h1>
      <h3>
        <%= link_to "New #{params[:controller].chomp('s').capitalize}",
                              eval("new_#{params[:controller].chomp('s').underscore}_path") %>
      </h3>
    </div>
  </div>
  <div class="row">
  <% objects.each do |object| %>
    <div class="col-xs-8">
      <h3><%= link_to get_title(object), object %></h3>
    </div>
    <div class="col-xs-4 text-right">
      <%= link_to fa_icon("pencil 2x", id: "pencil"), send("edit_#{object.class.to_s.underscore}_path", object) %>
      <%= link_to fa_icon("trash 2x", id: "bin"), object, method: :delete, data: { confirm: "Are you sure?" } %>
    </div>
  <% end %>
  </div>
</div>
