<blockquote>
  <%= @testemonial.description %>
</blockquote>
<strong>
- <%= @testemonial.name %>
</strong>
<p class="text-right">
  <%= link_to fa_icon("pencil 2x", id: "pencil"), edit_testemonial_path(@testemonial),
                                                                          title: "Edit" %>
  <%= link_to fa_icon("trash 2x", id: "bin"), @testemonial,
                                                                     method: :delete,
                                                                     data: { confirm: "Are you sure?" },
                                                                     title: "Delete" %>
</p>
