<div id="index-page">
  <div class="row">
    <div class="col-xs-6 col-xs-offset-3 text-center" id="admin-controls">
      <h1>
        <%= link_to fa_icon("plus 2x", id: "plus"),new_testemonial_path %>
      </h1>
      <h3>
        <%= link_to "New Testemonial",new_testemonial_path %>
      </h3>
    </div>
  </div>
  <div class="row">
  <% @testimonials.each do |testimonial| %>
    <div class="col-xs-12 col-sm-8">
      <h3><%= link_to testimonial.name, testimonial %></h3>
    </div>
    <div class="col-xs-12 col-sm-4 text-right resource-controls">
      <%= link_to fa_icon("pencil 2x", id: "pencil"), edit_testemonial_path(testimonial),
                                                                          title: "Edit" %>
      <%= link_to fa_icon("trash 2x", id: "bin"), testimonial, method: :delete, data: { confirm: "Are you sure?" }, title: "Delete" %>
    </div>
  <% end %>
  </div>
</div>
