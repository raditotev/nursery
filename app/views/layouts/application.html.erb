<!DOCTYPE html>
<html>
  <head>
    <meta name="viewport" content="width=device-width, initial-scale=1">
    <title><%= yield :title %> | Oaktree Day Nursery</title>
    <%= csrf_meta_tags %>

    <%= stylesheet_link_tag    'application', media: 'all', 'data-turbolinks-track': 'reload' %>
    <%= javascript_include_tag 'application', 'data-turbolinks-track': 'reload' %>
    <link rel="icon" type="image/x-icon" href="<%= image_url "oaktree.ico" %>">
  </head>

  <body>

<nav class="navbar navbar-default">
  <div id="header" class="container">
    <!-- Brand and toggle get grouped for better mobile display -->
    <div class="navbar-header">
      <%= link_to root_url, class: "pull-left" do %>
        <%= image_tag "logo.png", id: "logo" %>
      <% end %>
      <button type="button" class="navbar-toggle collapsed pull-right" data-toggle="collapse" data-target="#navbar-collapse" aria-expanded="false">
        <span class="sr-only">Toggle navigation</span>
        <span class="icon-bar"></span>
        <span class="icon-bar"></span>
        <span class="icon-bar"></span>
      </button>
    </div>

    <!-- Collect the nav links, forms, and other content for toggling -->
    <div class="collapse navbar-collapse" id="navbar-collapse">
      <ul class="nav navbar-nav navbar-right">
        <li><%= link_to "Home", root_url %></li>
        <li><%= link_to "About Us", about_us_path %></li>
        <li><%= link_to "Nursery", nursery_path %></li>
        <li><%= link_to "Staff", staff_path %></li>
        <li><%= link_to "Contact", contact_path %></li>
          <% if parent_signed_in? %>
            <li><%= link_to "Gallery", gallery_path %></li>
            <li><%= link_to "News", news_path %></li>
            <li><%= link_to "Log out", destroy_parent_session_path, method: :delete %></li>
          <% else %>
            <li><%= link_to "Parents", new_parent_session_path %></li>
          <% end %>
      </ul>
    </div><!-- /.navbar-collapse -->
  </div><!-- /.container-fluid -->
</nav>


  <!-- Flash messages -->
  <div class="container">
    <div class="row">
      <% flash.each do |message_type, message| %>
      <% message_type = message_type == "notice" ? "info" : message_type %>
        <div class="alert alert-<%= message_type %> text-center"><%= message %></div>
      <% end %>
    </div>
  </div>

  <main>
    <%= yield %>
  </main>


