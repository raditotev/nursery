<p id="notice"><%= notice %></p>

<h1>Breaks</h1>

<table>
  <thead>
    <tr>
      <th>Start date</th>
      <th>End date</th>
      <th>Description</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @breaks.each do |break| %>
      <tr>
        <td><%= break.start_date %></td>
        <td><%= break.end_date %></td>
        <td><%= break.description %></td>
        <td><%= link_to 'Show', break %></td>
        <td><%= link_to 'Edit', edit_break_path(break) %></td>
        <td><%= link_to 'Destroy', break, method: :delete, data: { confirm: 'Are you sure?' } %></td>
      </tr>
    <% end %>
  </tbody>
</table>

<br>

