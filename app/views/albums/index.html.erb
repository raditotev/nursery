<div class="row">
  <div class="col-xs-6 col-xs-offset-3 text-center" id="admin-controls">
    <h1>
      <%= link_to fa_icon("plus 2x", id: "plus"), new_album_path %>
    </h1>
    <h3>
      <%= link_to "New Album", new_album_path %>
    </h3>
  </div>
</div>
<div class="row">
  <% @albums.each do |album| %>
    <div class="col-sm-6 col-md-4">
      <div class="thumbnail">
      <% if album.photos.any? %>
        <%= link_to album do %>
          <%= image_tag(album.photos.first.image.url(:medium), alt: "Photo", class: "img-responsive") %>
        <% end %>
        <% else %>
          <%= link_to edit_album_path(album) do %>
            <p class="missing-photos">
              <strong>
                No photos in this album
                <%= fa_icon("frown-o 2x") %> <br>
                Please add some...
              </strong>
            </p>
          <% end %>
        <% end %>
        <div class="caption">
          <h3 class="text-center"><%= album.name %></h3>
          <p>
            <%= link_to "Edit", edit_album_path(album), class: "btn btn-warning", role: "button" %>
            <%= link_to "Delete", album, method: :delete, data: { confirm: 'Are you sure?' }, class: "btn btn-danger pull-right", role: "button" %>
          </p>
        </div>
      </div>
    </div>
  <% end %>
</div>

